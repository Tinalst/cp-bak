{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "no-unused-expression": false,
        "semicolon": [
            false,
            "always"
        ],
        "no-trailing-whitespace": false
    }
}
